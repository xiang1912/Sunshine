<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tonjies.weatherx">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <application

        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 城市选择页面 -->
        <activity android:name=".module.select.SelectActivity"></activity>

        <!--  -->
        <activity android:name=".MainActivity" />

        <!--  -->
        <activity android:name=".module.weather.WeatherActivity" />
        <activity android:name=".base.MvpActivity" />

        <!--  -->
        <activity android:name=".module.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".base.BaseActivity"></activity>
    </application>

</manifest>